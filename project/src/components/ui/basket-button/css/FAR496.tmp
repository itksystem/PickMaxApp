:root {
  --button-bg-color: #007bff;
  --button-text-color: white;
  --button-padding: 0.625rem 1.25rem; /* 10px 20px */
  --button-border-radius: 0.3125rem; /* 5px */
  --button-font-size: 0.85rem; /* 16px */
  --button-gap: 0.625rem; /* 10px */
}

basket-button {
    border: none;
    padding: 0;
} 

.basket-button {
  background-color: var(--button-bg-color);
  color: var(--button-text-color);
  border: none;
  padding: none
  border-radius: var(--button-border-radius);
  cursor: pointer;
  font-size: var(--button-font-size);
  width: 100%;
}

.basket-counter {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--button-gap);
}

.basket-decrement,
.basket-increment {
  background-color: var(--button-bg-color);
    color: var(--button-text-color);
    border: none;
    padding: 0.3125rem 0.9375rem;
    border-radius: var(--button-border-radius);
    cursor: pointer;
    font-size: var(--button-font-size);
    width: 100%;
    text-align: center;
    box-shadow: 
        0.25rem 0.25rem 0.5rem rgba(0, 0, 0, 0.2), 
        -0.125rem -0.125rem 0.25rem rgba(255, 255, 255, 0.7);
    transition: all 0.2s ease-in-out;
    margin: 0.4rem;
}

.basket-decrement:active,
.basket-increment:active {
    box-shadow: 
        inset 0.25rem 0.25rem 0.5rem rgba(0, 0, 0, 0.3), 
        inset -0.125rem -0.125rem 0.25rem rgba(255, 255, 255, 0.5);
    transform: translateY(0.125rem);
    margin: 0.4rem;
}

.basket-count {
  font-size: var(--button-font-size);
}

/* Убирает рамку по умолчанию при фокусе */
.basket-button:focus,
.basket-decrement:focus,
.basket-increment:focus {
  outline: none;
}

button.basket-decrement-white, 
button.basket-increment-white {
  background-color: #efefef;
  color: #000000;
  border: none;
  padding: 5px 15px;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;
}

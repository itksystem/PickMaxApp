	      <form id="fileupload" name="fileupload" action="/profile/photo/{{redirect_user_id}}" method="POST" enctype="multipart/form-data" >  	  	   
	    	<div class="row">
		    <div class="col-sm-4 profile-photo-load-poligon">
			<a href="{{ redirect_user_image }}" class="image-thumbnail-user" data-lightbox="{{redirect_user_id}}-image-1" data-title="{{ redirect_user_image_title }}" >{{ redirect_user_name }}
				     <img id="user-photo-image" name="user_photo_image" class="img-circle image-thumbnail-logged-user" src="{{ redirect_user_image }}" 
				           class="img-circle elevation-2" alt="{{ redirect_user_image_title }}"
				 	   style="width: 100%; cursor:pointer;">

			</a>

			        <span id="process-indicator"></span>
				<span class="plugin-service-result"></span>
 			        <span id="upload-dlg-gallery-table"></span>
			</div>
